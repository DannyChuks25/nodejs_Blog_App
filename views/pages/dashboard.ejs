<div class="admin-title">
    <!-- <pre><% //console.log(user);  %></pre> -->
    <% if (user) { %>
        <h2>Welcome, <%= user.name %>üñê</h2>
        <% } %>

            <div class="user-heading">
                <h2 style="font-weight: 300;">Posts</h2>
                <a href="<%= adminRoutes %>/create" class="button">
                    + Add New
                </a>
            </div>
</div>

<div class="card-ctn">
    <% data.forEach(post=> { %>
        <div class="card">
            <div class="img-ctn">
                <img src="<%= post.coverPhoto %>" alt="">
            </div>
            <div class="tech-stack">
                <h5>
                    <%= post.techStack %>
                </h5>
            </div>
            <div class="blog-title">
                <a href="<%= adminRoutes %>/post/<%= post._id %>">
                    <h3>
                        <%= post.title %> &nearr;
                    </h3>
                </a>
                <i></i>
            </div>
            <div class="blog-desc">
                <p>
                    <%= post.desc %>
                </p>
            </div>
            <div class="munt">
                <div class="more">
                    <!-- <div class="profile-img">
                        <img src="<%= //post.profileImg %>" alt="">
                    </div> -->

                    <div class="name-Date">
                        <div class="name">
                            <h5>
                                <%= post.authorName %>
                            </h5>
                        </div>
                        <div class="date">
                            <span>
                                <!-- <%= post.createdAt.toDateString() %> -->
                                <%= post.createdAt ? post.createdAt.toDateString() : post.date %>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="upd_Del">
                    <div>
                        <a href="<%= adminRoutes %>/update-post/<%= post._id %>" class="btn">
                            Edit
                        </a>
                    </div>
                    <form action="<%= adminRoutes %>/delete-post/<%= post._id %>?_method=DELETE" method="post"
                        id="deletePost">
                        <input type="submit" value="Delete">
                    </form>
                    <!-- <form action="/<%= route %>/delete/<%= data._id %>?_method=DELETE" method="POST">
                        <input type="submit" value="Delete">
                    </form> -->
                </div>
            </div>
        </div>
        <% }) %>

        <% if (nextPage !==null) { %>
            <a href="<%= adminRoutes %>/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
        <% } %>
</div>
